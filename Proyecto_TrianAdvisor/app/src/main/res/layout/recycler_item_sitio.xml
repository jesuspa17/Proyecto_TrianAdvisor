<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center"
    card_view:backgroundTint="@android:color/holo_blue_light"
    android:layout_marginBottom="5dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/restaurante"
                android:layout_marginLeft="18dp"
                android:id="@+id/imageViewCategoria" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Las Golondrinas"
                android:id="@+id/textViewNombre"
                android:textSize="20dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textStyle="bold" />


        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp">

            <GridView
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:id="@+id/gridViewFavoritos"
                android:columnWidth="35dp"
                android:verticalSpacing="10dp"
                android:numColumns="auto_fit"
                android:stretchMode="spacingWidthUniform"
                android:listSelector="@android:color/transparent"

                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Calle Antillano Campos 26, Sevilla"
            android:id="@+id/textViewCalle"
            android:textSize="13dp"
            android:paddingLeft="20dp"
            android:layout_alignParentTop="true"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bar"
            android:textSize="15dp"
            android:id="@+id/textViewCategoria"
            android:gravity="bottom"
            android:paddingLeft="20dp"
            android:paddingBottom="5dp"/>


    </LinearLayout>


</android.support.v7.widget.CardView>

