<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_marginTop="13dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageViewUserValoracion"
            android:src="@drawable/ic_mi_perfil"
            android:layout_weight="0.11" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Luis Miguel Lopez MagaÃ±a"
                    android:id="@+id/textViewNomUsuarioVal"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Fecha"
                    android:layout_marginTop="5dp"
                    android:paddingRight="10dp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:id="@+id/txtFechaVal" />

            </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Un sitio de categoria"
                android:id="@+id/textViewComentarioVal"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>