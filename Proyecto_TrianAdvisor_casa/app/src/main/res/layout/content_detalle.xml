<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_detalle" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dam.salesianostriana.proyecto_trianadvisor.DetalleActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBarValoracionDetalle"
                style="@style/StarRatingBar"
                />


            <!--<GridView
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:id="@+id/gridViewFavoritosDetalle"
                android:columnWidth="35dp"
                android:verticalSpacing="10dp"
                android:numColumns="auto_fit"
                android:layout_marginLeft="-8dp"
                android:stretchMode="spacingWidthUniform"
                android:listSelector="@android:color/transparent"
                />-->

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Descripcion del lugar"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/linea_final"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:text="Tapas y raciones en una típica taberna andaluza con azulejos pintados, platos de cerámica y sillas de mimbre."
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/textViewDescripcionDetalle" />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Calle Constitución 14, Sevilla"
            android:id="@+id/textViewDireccionDetalle"
            android:gravity="center"
            android:background="@drawable/fondo"
            android:textSize="17dp"
            android:padding="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/fondo"
        android:layout_marginTop="5dp"
        android:id="@+id/linearComoLlegar">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imageView4"
            android:src="@drawable/ic_direcction"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="¿Cómo llegar a este sitio?"
            android:textSize="17dp"
            android:id="@+id/textView6"
            android:gravity="center"
            android:paddingLeft="5dp"/>


    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/fondo"
            android:layout_marginTop="5dp"
            android:id="@+id/linearTelefono">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/imageView3"
                android:src="@drawable/ic_call"
                android:layout_marginLeft="10dp"
                android:padding="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Llamar a "
                android:textSize="17dp"
                android:id="@+id/textViewLlamarAviso"
                android:gravity="center"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="955718480"
                android:id="@+id/textViewNumeroTlfDetalle"
                android:textSize="17dp"
                android:gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Valoraciones"
                android:id="@+id/textView5"
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView8"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/linea_final"
                android:layout_marginBottom="15dp"/>

           <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_valoraciones"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="147dp"/>

        </LinearLayout>




    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
