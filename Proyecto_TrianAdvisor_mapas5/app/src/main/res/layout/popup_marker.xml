<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageViewInfoWindow"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo_triana"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="La resolana"
        android:textSize="15dp"
        android:id="@+id/textViewNombreInfoWindow"
        android:layout_toEndOf="@+id/imageViewInfoWindow"
        android:layout_above="@+id/textViewDireccionInfoWindow"
        android:gravity="center"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Calle sadjasdjas"
        android:textSize="15dp"
        android:id="@+id/textViewDireccionInfoWindow"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/imageViewInfoWindow"
        android:layout_toEndOf="@+id/imageViewInfoWindow" />


    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBarValoracionInfoWindow"
        style="@style/StarRatingBar"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewNombreInfoWindow" />
</RelativeLayout>